{
  "type": "commonjs",
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  },
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint 'src/**/*.{ts,js}' --max-warnings=0",
    "lint:fix": "eslint src/**/*.{ts,js} --fix",
    "prettier:check": "prettier --check src/**/*.{ts,js,json,md}",
    "prettier:fix": "prettier --write src/**/*.{ts,js,json,md}",
    "prisma:merge": "ts-node prisma/merge-prisma-schemas.ts",
    "prisma:generate": "npx prisma generate",
    "migrate:dev": "npm run merge:prisma && npx prisma migrate dev",
    "db:push": "npm run merge:prisma && npx prisma db push",
    "prisma:studio": "npx prisma studio"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.16.2",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^6.16.2",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/bcrypt": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.2.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript-eslint": "^8.45.0"
  }
}
